// Form a number divisible by 3 using array digits
// October 20, 2023
// C++ Code

class Solution {
  public:
    int isPossible(int N, int arr[]) {
        long long  count = 3 ;
        for(int i = 0  ; i < N ; i++) {
            count = count + arr[i] ;
        }
        
        if(count % 3 == 0) {
            return 1 ;
        }
        else {
            return 0 ;
        }
        
    }
};
